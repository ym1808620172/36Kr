<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/item_author_list_padding">
    <!--作者详情的ListView的行布局-->
    <ImageView
        android:id="@+id/item_author_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="@dimen/item_author_list_margin_left"
        android:id="@+id/item_author_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/item_author_list_text_color"
        android:textSize="@dimen/item_author_list_text_size" />
</LinearLayout>